@import '_reset'
@import '_mixins'
@import '_flexbox'


/*==============================
=            Global            =
==============================*/

html 
	font-size 62.5%
	min-height 100%

body 
	min-height 100%
	font-family 'Montserrat', sans-serif
	font-weight 400
	color white
	background rgb(0,182,219)
	background -moz-linear-gradient(-45deg,  rgba(0,182,219,1) 0%, rgba(0,186,136,1) 100%)
	background -webkit-linear-gradient(-45deg,  rgba(0,182,219,1) 0%,rgba(0,186,136,1) 100%)
	background linear-gradient(135deg,  rgba(0,182,219,1) 0%,rgba(0,186,136,1) 100%)
	opacity 1
	transition .3s
	&:before
		content ''
		position absolute
		z-index -1
		width 100%
		height 100%
		background url('../images/sky.jpg') center center
		background-size cover
		filter blur(10px)
		opacity .2
	&.ng-cloak
		opacity 0

/*=================================
=            Variables            =
=================================*/

$blue = rgb(0,182,219)
$green = rgb(0,186,136)


/*===============================
=            Content            =
===============================*/

.container
	max-width 850px
	margin 0 auto
	@media( max-width 870px )
		width 100%
		padding 0 20px

/*==============================
=            Header            =
==============================*/

.header-page
	padding 70px 0 50px
	text-align center

.title-page 
	font-size 7rem
	letter-spacing -.5rem
	font-weight 400
	margin 0


/*======================================
=            Search section            =
======================================*/

.search-city 
	position relative
	margin 0 auto 20px auto
	max-width 600px
	@media( max-width 870px )
		max-width 100%
	.search
		width 100%
		height 60px
		border 1px solid rgba(255, 255, 255, .5)
		background transparent
		font-size 2.8rem
		color white
		text-align center
		padding 0 20px
		box-sizing border-box
		rounded 3px
		transition .3s
		@media( max-width 870px )
			font-size 1.8rem
		&:hover 
		&:focus
		&.ng-not-empty
			border-color white

.search-list
	position absolute
	z-index 3
	top 100%
	left 0
	width 100%
	max-height 0
	padding 0
	margin -2px 0 0
	list-style none
	overflow-y auto
	background-color white
	border 1px solid white
	border-top 0
	box-sizing border-box
	visibility hidden
	opacity 0
	rounded 0 0 3px 3px
	transition .3s .3s
	&.open 
		opacity 1
		visibility visible
		max-height 250px
	
	>.item
		cursor pointer
		padding 10px
		font-size 1.6rem
		transition .3s
		color $blue
		transition .3s
		&:hover 
		&:focus 
			color white
			background-color $blue


/*======================================
=            Forecast Daily            =
======================================*/

.daily-forecast
	position relative
	&:after
		content ''
		position absolute
		z-index 9
		width 100%
		height 100%
		top 0	
		left 0
		background url('../images/loading.svg') center center no-repeat
		opacity 1
		transition .3s
	&.load
		.container
			opacity 1
		&:after 
			opacity 0
			z-index -1
	.container 
		opacity 0
		transition .3s
		position relative
	.today 
		margin 20px 0
		text-align center
		font-size 20px
		@media( max-width 870px )
			font-size 1.8rem

.box-daily
	flexbox flex 
	align-items center
	justify-content center
	@media( max-width 870px )
		position relative
		flex-direction column
	>.item
		margin 0 10px
		&.-icon
			font-size 6.5rem
			@media( max-width 870px )
				position absolute
				top 30px
				left 50%
				margin-left -140px
				font-size 5rem
				
		&.-temp
			font-size 12rem
			line-height 12rem

.unit-items
	position relative
	width 36px
	align-self start
	@media( max-width 870px )
		position absolute
		top 0
		right 50%
		margin-right -130px !important
		
	>.unit
		position absolute
		flexbox flex
		align-items center
		justify-content center
		width 36px
		height 36px
		top 55px
		margin 0
		font-size 1.8rem
		border 1px solid transparent
		cursor pointer
		rounded 50%
		opacity .5
		transition .3s
		&:hover 
			opacity 1
		&.-selected 
			top 10px
			border-color white
			margin-top 0
			opacity 1

.description-daily
	max-width 300px
	@media( max-width 870px )
		text-align center
	>.status
		font-size 2.8rem
		line-height 2.8rem
		margin 0 0 5px
		@media( max-width 870px )
			font-size 2.2rem
			line-height 2.2rem

.list-status
	padding 0
	margin 0
	list-style none
	>.status 
		font-size 1.8rem   
		@media( max-width 870px )
			font-size 1.6rem   


/*=======================================
=            Forecast Hourly            =
=======================================*/

.box-chart
	max-height 100px
	margin-top 20px


/*=====================================
=            Forecast Days            =
=====================================*/

.forecast-days
	flexbox flex
	justify-content center
	align-items start
	margin 40px 0
	@media( max-width 870px )
		flex-wrap wrap

.box-day
	border 1px solid rgba(255, 255, 255, .5)
	padding 10px 15px
	margin 0 10px
	rounded 3px
	background-color transparent
	color white
	flex 0 0 130px
	transition .3s
	@media( max-width 870px )
		margin 10px
	&:hover
	&.-active
		border-color white
		background-color rgba(255, 255, 255, .2)
		.title
			opacity 1
	&:disabled 
		cursor not-allowed
	>.title 
		display block
		text-align center
		margin 0
		font-size 1.6rem
		opacity .5
		transition .3s
	>.icon 
		display block
		text-align center
		font-size 3rem
		margin 5px 0

.temp-status 
	flexbox flex 
	align-items start
	justify-content center
	>.max 
		font-size 2.7rem
	>.min
		font-size 1.8rem
		opacity .5


/*==============================
=            Footer            =
==============================*/

.footer-page
	margin 80px 0
	text-align center
	p 
		font-size 1.2rem
		text-transform uppercase
		letter-spacing 5px

